<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>LIST APP</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <!-- <script src="/send_url.js"></script> -->
  </head>
  <body>
    <%- include('header'); %>
    <main>
      <div class="container">
        <div class="container-header">
          <h1>買い物リスト</h1>
          <a href="/new" class="new-button">+ 新規登録</a>
        </div>
        <div class="index-table-wrapper">
          <div class="table-head">
            <span class="id-column">ID</span>
            <span>買うもの</span>
          </div>
          <ul class="table-body">
            <% items.forEach((item) => { %>
              <li>
                <div class="item-data">
                  <span class="id-column"><%= item.itemId %></span>
                  <span class="name-column"><%= item.name %></span>
                </div>
                <div class="item-menu">
                  <form action="/delete/<%= item.itemId %>" method="post">
                    <input type="submit" value="削除">
                  </form>
                  <a href="/edit/<%= item.itemId %>">編集</a>
                </div>
              </li>
            <% }) %>
          </ul>
        </div>
      </div>
    </main>
  </body>
</html>